
    {% extends 'hautdepage.html.twig' %}

{% block stylesheets %}
<style>
    * { margin: auto; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif; }
    body { background: #fff; display: flex; justify-content: center; padding: 0px; }
    .conteneur { width: 100%; max-width: 400px; text-align: center; }
    .photo-profil { width: 120px; height: 120px; border-radius: 50%; overflow: hidden; margin: 20px auto 10px; border: 3px solid transparent; background: linear-gradient(45deg, #ffcc00, #ff0066, #6600ff); padding: 3px; }
    .photo-profil img { width: 100%; height: 100%; border-radius: 50%; object-fit: cover; }
    .niveau { font-size: 18px; font-weight: bold; margin-bottom: 20px; color: #004aad; }
    .infos { text-align: left; margin-bottom: 20px; }
    .infos p { font-size: 15px; margin: 5px 0; padding: 8px 0; border-bottom: 1px solid #ddd; }
    .ligne { display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #ddd; padding: 12px 0; font-size: 14px; }
    .bouton-petit { padding: 6px 14px; border: none; border-radius: 8px; background: #5a9bff; color: #fff; font-size: 14px; cursor: pointer; transition: background 0.3s; }
    .bouton-petit:hover { background: #387ef5; }
    .bouton-grand { width: 100%; padding: 12px; margin-top: 20px; border: none; border-radius: 10px; font-size: 15px; background: #5a9bff; color: #fff; cursor: pointer; transition: background 0.3s; }
    .bouton-grand:hover { background: #387ef5; }
    .bouton-grand span { margin-left: 5px; font-weight: bold; }
</style>
{% endblock %}
    {% block body %}
    <div class="conteneur">
        <div class="photo-profil">
            <img src="{{ asset('img/avatar.png') }}" alt="Photo de profil">
        </div>
        <p class="niveau">Niveau 7</p>

        <div class="infos">
            <p>Prénom : {{ prenom }}</p>
            <p>Nom : {{ nom }}</p>
        </div>

        <div class="ligne">
            <span>Page Contributions</span>
            <button class="bouton-petit">Voir</button>
        </div>

        <div class="ligne">
            <span>Modale Projets</span>
            <button class="bouton-petit">Voir</button>
        </div>

        <div class="ligne">
            <span>Modale Compétences</span>
            <button class="bouton-petit">Voir</button>
        </div>

        <div class="ligne">
            <span>Disponibilités</span>
            <span>du … / au …</span>
        </div>

        <div class="ligne">
            <span>Page Modification Profil</span>
            <button class="bouton-petit">Voir</button>
        </div>

        <button class="bouton-grand">
            Ajouter à vos contacts <span>+</span>
        </button>
    </div>
{% endblock %}
